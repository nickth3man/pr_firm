<?xml version="1.0" encoding="UTF-8"?>
<brand_bible>
    <metadata>
        <company_name>TechCorp</company_name>
        <version>1.2</version>
        <last_updated>2023-11-15</last_updated>
        <description>Comprehensive brand guidelines for TechCorp</description>
    </metadata>

    <brand_voice>
        <description>Professional yet approachable, knowledgeable but not condescending</description>
        <characteristics>
            <characteristic>knowledgeable</characteristic>
            <characteristic>helpful</characteristic>
            <characteristic>slightly humorous</characteristic>
            <characteristic>concise</characteristic>
        </characteristics>
        <tone>
            <formal>70%</formal>
            <friendly>30%</friendly>
        </tone>
    </brand_voice>

    <!-- Missing closing tag for platforms -->
    <platforms>
        <twitter>
            <characteristics>
                <characteristic>concise</characteristic>
                <characteristic>engaging</characteristic>
                <characteristic>hashtag-friendly</characteristic>
            </characteristics>
            <style_rules>
                <rule>Use 280 characters or less</rule>
                <rule>Include relevant hashtags</rule>
                <rule>Use emojis sparingly</rule>
                <rule>End with a call-to-action when appropriate</rule>
            </style_rules>
        </twitter>

        <!-- Missing closing tag for linkedin -->
        <linkedin>
            <characteristics>
                <characteristic>professional</characteristic>
                <characteristic>insightful</characteristic>
                <characteristic>value-driven</characteristic>
            </characteristics>
            <style_rules>
                <rule>Use professional but approachable language</rule>
                <rule>Include industry-relevant statistics when possible</rule>
                <rule>Use paragraph breaks for readability</rule>
                <rule>End with a question to encourage engagement</rule>
            </style_rules>
        </linkedin>
    </platforms>

    <style_guide>
        <grammar_rules>
            <rule>Use Oxford comma</rule>
            <rule>Avoid passive voice</rule>
            <rule>Limit sentences to 30 words maximum</rule>
            <rule>Use em dashes without spacesâ€”like this</rule>
        </grammar_rules>
        <formatting>
            <rule>One space after periods</rule>
            <rule>No multiple spaces between words</rule>
            <rule>Use title case for headings</rule>
            <rule>Use sentence case for body text</rule>
        </formatting>
    </style_guide>